		"npm-run-all": "^4.1.5",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-hook-form": "^7.11.0",
		"react-router": "^5.2.0",
		"react-router-dom": "^5.2.0",
		"react-virtuoso": "^1.9.3",
		"uuid": "^8.3.2"
	},
	"devDependencies": {
